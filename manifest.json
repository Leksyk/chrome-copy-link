{
  "manifest_version": 2,

  "name": "Copy page link",
  "description": "This extension allows you to copy the current tab address and title as rich text link",
  "version": "1.2.1",

  "background": {
    "persistent": false,
    "scripts": ["copyLink.js"]
  },

  "browser_action": {
    "default_icon": "icon.png"
  },

  "commands": {
    "copy-link": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+MacCtrl+C"
      },
      "description": "Copy the current page's link/title to clipboard"
    },
    "copy-as-plain": {
      "description": "Copy Link and Title as Plain Text"
    }
  },

  "permissions": [
    "clipboardWrite",
    "tabs",
    "contextMenus"
  ],
  "optional_permissions": [
    "notifications"
  ],
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'"
}
